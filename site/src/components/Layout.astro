---
const { title = "Glossary", search = true } = Astro.props;
import Search from '../components/Search';
import "../styles/global.css";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" href="/favicon.ico" />
    <title>{title} | ZODIAC Glossary</title>
  </head>
  <body>
    <div class="layout">
      <!-- Top nav bar for mobile -->
      <nav class="top-nav">
        <div class="logo">Glossary</div>
        <div class="nav-links">
          <a href="/">Home</a>
          <a href="/about">About</a>
          <a href="/people">People</a>
        </div>
      </nav>

      <aside class="sidebar">
        <div class="sidebar-links">
          <a href="/">Home</a>
          <a href="/about">About</a>
          <a href="/people">People</a>
          <a href="/search">Advanced Search</a>
        </div>
        {search &&
        <Search client:load />
        }
        <div class="sidebar-logos">
        <a href="https://www.geschkult.fu-berlin.de/e/zodiac/index.html"><img src="/zodiac_logo.svg" alt="logo of the ZODIAC project"/></a>
        <a href="https://www.fu-berlin.de/"><img src="/fu_logo.svg" alt="old siglum of Freie UniversitÃ¤t Berlin"/></a>
        <a href="https://erc.europa.eu/homepage"><img src="/erc_logo.svg" alt="logo of the European Research Council (ERC)"/></a>
        </div>
      </aside>

      <main class="content">
        <slot />
      <footer class="footer">
        <p>&copy; {new Date().getFullYear()} Glossary Project</p>
      </footer>
      </main>
    </div>
  </body>
</html>
