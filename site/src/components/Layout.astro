---
const { title = "Glossary" } = Astro.props;
import Search from '../components/Search';
import "../styles/global.css";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>{title}</title>
  </head>
  <body>
    <div class="layout">
      <!-- Top nav bar for mobile -->
      <nav class="top-nav">
        <div class="logo">Glossary</div>
        <div class="nav-links">
          <a href="/">Home</a>
          <a href="/about">About</a>
          <a href="/people">People</a>
        </div>
      </nav>

      <aside class="sidebar">
        <div class="sidebar-links">
          <a href="/">Home</a>
          <a href="/about">About</a>
          <a href="/people">People</a>
        </div>
        <Search client:load />
      </aside>

      <main class="content">
        <slot />
      </main>
    </div>
  </body>
</html>
